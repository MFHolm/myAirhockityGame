<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mthomsen.airhockitygame.Settings">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_gravity="center"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Points to win"
            android:textSize="30dp"
            android:layout_marginTop="50dp" />


        <RadioGroup
            android:id="@+id/pointsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Three"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_three"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Five"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_five" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_ten" />
        </RadioGroup>
        <TextView
            android:layout_gravity="center"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Friction"
            android:textSize="30dp"
            android:layout_marginTop="0dp" />
        <RadioGroup
            android:id="@+id/frictionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_none"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_some" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Much"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radio_much" />
        </RadioGroup>

        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/default_button"
            android:text="Set Default"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/return_button"
            android:text="Return to main menu"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</RelativeLayout>
